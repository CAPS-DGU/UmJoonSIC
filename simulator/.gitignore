# =================================================================
# Standard .gitignore for a Java Gradle Project
# =================================================================

# IDE-specific files
# ------------------
# IntelliJ
.idea/
*.iml
*.ipr
*.iws
out/

# Eclipse
.classpath
.project
.settings/
bin/

# NetBeans
/nbproject/private/
/build/
/nbbuild/
/dist/
/nbdist/
.nb-gradle/

# VS Code
.vscode/

# Build artifacts and generated files
# -----------------------------------
.gradle/
build/
gradle-app.setting

# Gradle Wrapper
# ---------------
# Exclude the downloaded wrapper JAR, but keep the properties and script
!gradle-wrapper.jar

# Log files and temporary files
# -----------------------------
*.log
*.tmp

# Operating System files
# ----------------------
# macOS
.DS_Store

# Windows
Thumbs.db
